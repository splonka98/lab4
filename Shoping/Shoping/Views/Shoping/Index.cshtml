@model IEnumerable<Shoping.Models.ShopingModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista zakupów</h1>

<p>
    <a asp-action="Create">Dodaj Produkt</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            
            
            <td>
                @Html.ActionLink("Kupione", "Bought", new { id = item.ProductId }) |

                @Html.ActionLink("Edytuj", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Uwagi", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.ProductId })
            </td>
        </tr>
}
    </tbody>
</table>
